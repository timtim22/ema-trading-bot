<!-- Paper Trading Details Page -->
<div class="min-h-screen bg-gray-50 py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Paper Trading Details</h1>
          <p class="mt-2 text-sm text-gray-600">
            Comprehensive view of your simulated trading performance
          </p>
        </div>
        <div class="flex items-center space-x-3">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-orange-100 text-orange-800">
            <span class="w-2 h-2 bg-orange-400 rounded-full mr-2 animate-pulse"></span>
            SIMULATION MODE
          </span>
          <%= link_to dashboard_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
            <svg class="-ml-1 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Back to Dashboard
          <% end %>
        </div>
      </div>
    </div>

    <!-- Loading State -->
    <div id="loading-state" class="text-center py-12">
      <div class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-500">
        <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Loading paper trading data...
      </div>
    </div>

    <!-- Content -->
    <div id="paper-content" class="hidden">
      <!-- Account Overview Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Portfolio Value -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                </svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Portfolio Value</dt>
                  <dd class="text-lg font-medium text-gray-900" id="portfolio-value">--</dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <!-- Cash Balance -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Cash Balance</dt>
                  <dd class="text-lg font-medium text-gray-900" id="cash-balance">--</dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <!-- Total Return -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                </svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Total Return</dt>
                  <dd class="text-lg font-medium" id="total-return">--</dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <!-- Win Rate -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Win Rate</dt>
                  <dd class="text-lg font-medium text-gray-900" id="win-rate">--</dd>
                </dl>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Main Content Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Current Positions -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Current Positions</h3>
          </div>
          <div class="overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Symbol</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Qty</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">P&L</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200" id="positions-table">
                <!-- Will be populated by JavaScript -->
              </tbody>
            </table>
          </div>
        </div>

        <!-- Recent Orders -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Recent Orders</h3>
          </div>
          <div class="overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Symbol</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Side</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200" id="orders-table">
                <!-- Will be populated by JavaScript -->
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Performance Chart Section -->
      <div class="mt-8 bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Performance Metrics</h3>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="text-center">
              <div class="text-2xl font-bold text-gray-900" id="total-trades">--</div>
              <div class="text-sm text-gray-500">Total Trades</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-gray-900" id="active-positions">--</div>
              <div class="text-sm text-gray-500">Active Positions</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-gray-900" id="day-trade-count">--</div>
              <div class="text-sm text-gray-500">Day Trades Used</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Export Section -->
      <div class="mt-8 bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Export Data</h3>
        </div>
        <div class="p-6">
          <p class="text-sm text-gray-600 mb-4">
            Export your paper trading data to share with your client or for analysis.
          </p>
          <div class="flex space-x-4">
            <button id="export-csv" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
              <svg class="-ml-1 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              Export CSV
            </button>
            <button id="copy-summary" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
              <svg class="-ml-1 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/>
              </svg>
              Copy Summary
            </button>
            <button id="refresh-data" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700">
              <svg class="-ml-1 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
              </svg>
              Refresh Data
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  loadPaperTradingData();
  
  // Refresh button
  document.getElementById('refresh-data').addEventListener('click', function() {
    loadPaperTradingData();
  });
  
  // Export CSV button
  document.getElementById('export-csv').addEventListener('click', function() {
    exportToCSV();
  });
  
  // Copy Summary button
  document.getElementById('copy-summary').addEventListener('click', function() {
    copySummaryToClipboard();
  });
});

function loadPaperTradingData() {
  document.getElementById('loading-state').classList.remove('hidden');
  document.getElementById('paper-content').classList.add('hidden');
  
  fetch('/dashboard/paper_trading_info')
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        populateData(data);
        document.getElementById('loading-state').classList.add('hidden');
        document.getElementById('paper-content').classList.remove('hidden');
      } else {
        alert('Error loading paper trading data: ' + data.error);
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Failed to load paper trading data');
    });
}

function populateData(data) {
  // Account metrics
  document.getElementById('portfolio-value').textContent = '$' + (data.account?.portfolio_value || 0).toLocaleString();
  document.getElementById('cash-balance').textContent = '$' + (data.account?.cash || 0).toLocaleString();
  
  // Performance metrics
  const totalReturn = data.performance?.total_return_percent || 0;
  const totalReturnElement = document.getElementById('total-return');
  totalReturnElement.textContent = totalReturn.toFixed(2) + '%';
  totalReturnElement.className = 'text-lg font-medium ' + (totalReturn >= 0 ? 'text-green-600' : 'text-red-600');
  
  document.getElementById('win-rate').textContent = (data.performance?.win_rate || 0) + '%';
  document.getElementById('total-trades').textContent = data.performance?.total_trades || 0;
  document.getElementById('active-positions').textContent = data.performance?.active_positions || 0;
  document.getElementById('day-trade-count').textContent = data.account?.day_trade_count || 0;
  
  // Positions table
  const positionsTable = document.getElementById('positions-table');
  positionsTable.innerHTML = '';
  
  if (data.positions && data.positions.length > 0) {
    data.positions.forEach(position => {
      const row = document.createElement('tr');
      const plColor = position.unrealized_pl >= 0 ? 'text-green-600' : 'text-red-600';
      row.innerHTML = `
        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${position.symbol}</td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${position.qty}</td>
        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium ${plColor}">$${position.unrealized_pl.toFixed(2)}</td>
      `;
      positionsTable.appendChild(row);
    });
  } else {
    positionsTable.innerHTML = '<tr><td colspan="3" class="px-6 py-4 text-center text-gray-500">No positions</td></tr>';
  }
  
  // Orders table
  const ordersTable = document.getElementById('orders-table');
  ordersTable.innerHTML = '';
  
  if (data.recent_orders && data.recent_orders.length > 0) {
    data.recent_orders.slice(0, 5).forEach(order => {
      const row = document.createElement('tr');
      const sideColor = order.side === 'buy' ? 'text-green-600' : 'text-red-600';
      row.innerHTML = `
        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${order.symbol}</td>
        <td class="px-6 py-4 whitespace-nowrap text-sm ${sideColor}">${order.side.toUpperCase()}</td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${order.status}</td>
      `;
      ordersTable.appendChild(row);
    });
  } else {
    ordersTable.innerHTML = '<tr><td colspan="3" class="px-6 py-4 text-center text-gray-500">No recent orders</td></tr>';
  }
}

function exportToCSV() {
  // This would generate and download a CSV file
  alert('CSV export functionality would be implemented here');
}

function copySummaryToClipboard() {
  const summary = generateSummaryText();
  navigator.clipboard.writeText(summary).then(() => {
    alert('Summary copied to clipboard!');
  });
}

function generateSummaryText() {
  return `EMA Trading Bot - Paper Trading Summary
Generated: ${new Date().toLocaleString()}

Portfolio Value: ${document.getElementById('portfolio-value').textContent}
Cash Balance: ${document.getElementById('cash-balance').textContent}
Total Return: ${document.getElementById('total-return').textContent}
Win Rate: ${document.getElementById('win-rate').textContent}
Total Trades: ${document.getElementById('total-trades').textContent}
Active Positions: ${document.getElementById('active-positions').textContent}

Note: This is simulated trading data using paper money for testing purposes.`;
}
</script> 