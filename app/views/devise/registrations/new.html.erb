<div class="flex items-center justify-center min-h-screen bg-gray-50">
  <div class="bg-white shadow-lg rounded-2xl p-8 w-full max-w-md">
    <div class="flex flex-col items-center mb-6">
      <svg class="h-12 w-12 text-blue-600 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
      </svg>
      <h2 class="text-2xl font-bold text-gray-900">Create your account</h2>
      <p class="text-gray-500 mt-1">Join EMA Trading Bot today</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base py-2" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base py-2" %>
        <% if @minimum_password_length %>
          <p class="mt-1 text-sm text-gray-500">Minimum <%= @minimum_password_length %> characters</p>
        <% end %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base py-2" %>
      </div>

      <%= f.submit "Sign Up", class: "w-full signup-button-gradient font-bold py-2 px-4 rounded-md transition-all" %>
    <% end %>

    <div class="mt-6 text-center">
      <span class="text-gray-600">Already have an account?</span>
      <%= link_to "Sign In", new_session_path(resource_name), class: "text-blue-600 hover:underline font-semibold ml-1" %>
    </div>
  </div>
</div>

<style>
.signup-button-gradient {
  background: linear-gradient(135deg, #00ff88, #00d4ff);
  color: #0a0a0a;
  transition: all 0.3s ease;
}

.signup-button-gradient:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(0, 255, 136, 0.3);
}
</style> 