}

.navbar-brand {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.brand-link {
  display: flex;
  align-items: center;
  color: var(--navbar-text-light);
  font-weight: 700;
  font-size: 1.25rem;
  text-decoration: none;
  transition: all 0.3s ease;
}

.brand-link:hover {
  color: var(--navbar-accent-green);
  transform: translateY(-1px);
}

.brand-icon {
  height: 2rem;
  width: 2rem;
  margin-right: 0.5rem;
  color: var(--navbar-accent-blue);
}

.brand-text-full {
  display: none;
}

.brand-text-mobile {
  display: block;
}

@media (min-width: 640px) {
  .brand-text-full {
    display: block;
  }
  .brand-text-mobile {
    display: none;
  }
}

.desktop-nav {
  display: none;
}

@media (min-width: 768px) {
  .desktop-nav {
    display: block;
  }
}

.nav-links {
  margin-left: 2.5rem;
  display: flex;
  align-items: baseline;
  gap: 1rem;
}

.nav-link {
  display: flex;
  align-items: center;
  color: var(--navbar-text-muted);
  padding: 0.5rem 0.75rem;
  border-radius: 0.375rem;
  font-size: 0.875rem;
  font-weight: 500;
  text-decoration: none;
  transition: all 0.3s ease;
  position: relative;
}

.nav-link::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 0;
  height: 2px;
  background: linear-gradient(90deg, var(--navbar-accent-green), var(--navbar-accent-blue));
  transition: all 0.3s ease;
  transform: translateX(-50%);
}

.nav-link:hover {
  color: var(--navbar-text-light);
  background: rgba(0, 255, 136, 0.1);
  transform: translateY(-2px);
}

.nav-link:hover::before {
  width: 100%;
}

.nav-link.active {
  background: rgba(26, 26, 26, 0.8);
  color: var(--navbar-text-light);
  border: 1px solid rgba(0, 255, 136, 0.3);
}

.nav-link.active::before {
  width: 100%;
}

.nav-icon {
  height: 1rem;
  width: 1rem;
  margin-right: 0.375rem;
}

.desktop-user-menu {
  display: none;
}

@media (min-width: 768px) {
