}

.desktop-user-menu {
  margin-left: 1rem;
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.help-button {
  background: var(--navbar-secondary-dark);
  padding: 0.5rem;
  border-radius: 50%;
  color: var(--navbar-text-muted);
  border: 1px solid rgba(0, 255, 136, 0.2);
  transition: all 0.3s ease;
