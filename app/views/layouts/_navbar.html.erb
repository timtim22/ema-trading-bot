  pointer-events: auto;
}

.navbar-futuristic button,
.navbar-futuristic a,
.navbar-futuristic [role="button"] {
  cursor: pointer;
}

.navbar-futuristic * {
  transition: all 0.3s ease;
}

.navbar-content {
  width: 100%;
  padding: 0 1rem;
}

@media (min-width: 640px) {
  .navbar-content {
    padding: 0 1.5rem;
  }
}

@media (min-width: 1024px) {
  .navbar-content {
    padding: 0 2rem;
  }
}

.navbar-flex {
  display: flex;
  align-items: center;
